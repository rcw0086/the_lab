# ===========================================
# The Lab - Environment Configuration
# ===========================================
# Copy this file to .env and update values as needed

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=the_lab

# Backend API
ENVIRONMENT=development
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# JWT Authentication
# IMPORTANT: Generate a secure secret for production!
# Example: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Optional: pgAdmin (only used with docker compose --profile tools)
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
